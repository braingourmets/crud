= form_for @cat, url: cat_path, as: :cat do |f|
  - if @cat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cat.errors.count, "error")} prohibited this cat from being saved:"
      %ul
        - @cat.errors.full_messages.each do |msg|
          %li= msg

  %p
    %label Title
    =f.text_field :title

  .actions
    = f.submit 'Save'
